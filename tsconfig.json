{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "outDir": "out",
    "lib": ["esnext"],
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
    ],
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
